}


.mask {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background-color: rgba(0, 0, 0, .3);
    opacity: 0;
    display: none;
    transition: opacity 400ms;
}
.mask.toggle-show {
    display: block;
    opacity: 1;
}
.share-sheet {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #e0e0e0;
    transition: all 400ms;
    transform: translate3d(0, 100%, 0);
}
.share-sheet.toggle-show {
    transform: translate3d(0, 0, 0);
}
.share-sheet .share-main {
    background: #f5f5f5;
    padding: 42rpx 0;
}
.share-sheet .share-icon {
    width: 120rpx;
    height: 120rpx;
    background: #fff;
    display: block;
    border-radius: 20rpx;
    border: 1rpx solid #e8e8e8;
}
.share-sheet .share-text {
    color: #4a4a4a;
    font-size: 24rpx;
    margin-top: 18rpx;
}
.share-sheet .cancel {
    height: 100rpx;
    color: #000;
    font-size: 30rpx;
    margin-top: 12rpx;
    background-color: #f5f5f5;
    text-align: center;
}
.com-hover {
    opacity: .8;
}
.no-wx-btn-style {
    line-height: 1.6 !important;
    border: none !important;
}
.no-wx-btn-style:after {
    display: none !important;
}

