/* pages/buy/buy.wxss */
.userInfo {
    background: #f9ce0d;
    color: #3e3f41;
    opacity: 1;
    margin: 0 auto;
    box-sizing: border-box;
    padding: 60rpx 32rpx 40rpx;
    display: flex;
    align-items: center;
    position: relative;
}

.userInfo .avatar {
    width: 80rpx;
    height: 80rpx;
    display: block;
    margin-right: 28rpx;
    overflow: hidden;
    border-radius: 50%;
    background-size: cover;
    background-color: white;
}

.userInfo .nickName {
    flex: 1;
}

.userInfo .member {
    text-align: center;
}

.join-member {
    color: #D82C1E;
    font-size: 28rpx;
    text-decoration: underline;

}

.sign-avatar {
    width: 40rpx;
    height: 40rpx;
}

.member-card {
    width: 696rpx;
    /* height: 570rpx; */
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
    opacity: 1;
    border-radius: 5px;
    margin: 0 auto;
    box-sizing: border-box;
    transform: translate(0, -30rpx);
    padding-bottom: 20rpx;
    /* padding: 30rpx; */

}

.member-name {
    color: #333;
    font-size: 28rpx;
    font-weight: bold;
}

.price {
    font-size: 30rpx;
    font-weight: bold;
    color: #FE3F1D;
}

.old-price {
    text-decoration: line-through;
    color: #959695;
    font-size: 26rpx;
}




.ios-submit-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    line-height: 100rpx;
    text-align: center;
    background: #D82C1E;
    color: #fff;
}

.signUpNum {
    position: absolute;
    /* bottom: 160px; */
    /* left: 40px; */
    right: 40rpx;
    top: 60rpx;
    /* width: 340rpx; */
    color: #fff;
    font-size: 24rpx;
    overflow: hidden;
    
}
.signUpNum .num {
    font-weight: bold;
    font-size: 28rpx;
}

.signUpNumAnimation {
    display: inline-block;
    background: rgba(0, 0, 0, .4);
    border-radius: 56rpx;
    line-height: 2;
    padding: 0 24rpx;
    -webkit-animation: signUpNum_Keyframes 5s infinite;
            animation: signUpNum_Keyframes 5s infinite;
}
@-webkit-keyframes signUpNum_Keyframes{
    0% {
        -webkit-transform: translate3d(0, 100%, 0);
                transform: translate3d(0, 100%, 0);
    }
    5% {
        -webkit-transform: translate3d(0, 100%, 0);
                transform: translate3d(0, 100%, 0);
    }
    20% {
        -webkit-transform: translate3d(0, 0, 0);
                transform: translate3d(0, 0, 0);
    }
    80% {
        -webkit-transform: translate3d(0, 0, 0);
                transform: translate3d(0, 0, 0);
    }
    95% {
        -webkit-transform: translate3d(0, -100%, 0);
                transform: translate3d(0, -100%, 0);
    }
    100% {
        -webkit-transform: translate3d(0, -100%, 0);
                transform: translate3d(0, -100%, 0);
    }
}
@keyframes signUpNum_Keyframes{
    0% {
        -webkit-transform: translate3d(0, 100%, 0);
                transform: translate3d(0, 100%, 0);
    }
    5% {
        -webkit-transform: translate3d(0, 100%, 0);
                transform: translate3d(0, 100%, 0);
    }
    20% {
        -webkit-transform: translate3d(0, 0, 0);
                transform: translate3d(0, 0, 0);
    }
    80% {
        -webkit-transform: translate3d(0, 0, 0);
                transform: translate3d(0, 0, 0);
    }
    95% {
        -webkit-transform: translate3d(0, -100%, 0);
                transform: translate3d(0, -100%, 0);
    }
    100% {
        -webkit-transform: translate3d(0, -100%, 0);
                transform: translate3d(0, -100%, 0);
    }
}


.give-rule-btn {
    color: #3D96D3;
    text-decoration: underline;
}


.member-day {
    width: 70rpx;
    height: 30rpx;
    border-radius: 15rpx;
    color: #fff;
    background: #FE3F1D;
    font-size: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}