    padding-right: 76rpx;
}
.buy-btn:after {
    content: '';
    position: absolute;
    right: 38rpx;
    top: 44rpx;
    width: 20rpx;
    height: 20rpx;
    border-top: solid 2px currentColor;
    border-right: solid 2px currentColor;
    transform: rotate(45deg);
}

.signUpNum {
    position: absolute;
    right: 40rpx;
    top: 140rpx;
    color: #fff;
    font-size: 24rpx;
    overflow: hidden;
    
}
.signUpNum .num {
    font-weight: bold;
    font-size: 28rpx;
}

.signUpNumAnimation {
    display: inline-block;
    background: rgba(0, 0, 0, .4);
    border-radius: 56rpx;
    line-height: 2;
    padding: 0 24rpx;
    -webkit-animation: signUpNum_Keyframes 5s infinite;
            animation: signUpNum_Keyframes 5s infinite;
}
@-webkit-keyframes signUpNum_Keyframes{
    0% {
        -webkit-transform: translate3d(0, 100%, 0);
                transform: translate3d(0, 100%, 0);
    }
    5% {
        -webkit-transform: translate3d(0, 100%, 0);
                transform: translate3d(0, 100%, 0);
    }
    20% {
        -webkit-transform: translate3d(0, 0, 0);
                transform: translate3d(0, 0, 0);
    }
    80% {
        -webkit-transform: translate3d(0, 0, 0);
                transform: translate3d(0, 0, 0);
    }
    95% {
        -webkit-transform: translate3d(0, -100%, 0);
                transform: translate3d(0, -100%, 0);
    }
    100% {
        -webkit-transform: translate3d(0, -100%, 0);
                transform: translate3d(0, -100%, 0);
    }
}
@keyframes signUpNum_Keyframes{
    0% {
        -webkit-transform: translate3d(0, 100%, 0);
                transform: translate3d(0, 100%, 0);
    }
    5% {
        -webkit-transform: translate3d(0, 100%, 0);
                transform: translate3d(0, 100%, 0);
    }
    20% {
        -webkit-transform: translate3d(0, 0, 0);
                transform: translate3d(0, 0, 0);
    }
    80% {
        -webkit-transform: translate3d(0, 0, 0);
                transform: translate3d(0, 0, 0);
    }
    95% {
        -webkit-transform: translate3d(0, -100%, 0);
                transform: translate3d(0, -100%, 0);
    }
    100% {
        -webkit-transform: translate3d(0, -100%, 0);
                transform: translate3d(0, -100%, 0);
    }
}


