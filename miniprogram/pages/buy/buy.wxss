.member-card {
    position: absolute;
    width: 630rpx;
    left: 65rpx;
    height: 168rpx;
    top: 320rpx;
    border-radius: 10rpx;
    display: flex;
    box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.08);
    transform: translate(0, -60%);
    background: #fff;
    color: #67737D;
    /* overflow: hidden; */
}
.member-card:after {
    content: '';
    position: absolute;
    left: 25%;
    color: #4C4FF2;
    /* background: #4C4FF2;  */
    background-image: linear-gradient(135deg, transparent 50%,  #4C4FF2 50%); 
    bottom: 0;
    width: 12px;
    height: 12px;
    transform: rotate(45deg) translateY(8px);
    transition: left 400ms;
}
.member-card.duju:after {
    left: 75%;
}
.member-card.no-duju:after {
    left: 50%;
}
