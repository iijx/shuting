/* pages/my/my.wxss */

.container {
    /* background: #fff; */
    min-height: 100vh;
}
.top {
    height: 50%;
    width: 100%;
    color: #3e3f41;
    font-weight: bold;
}

.top .box1 {
    background: #f9ce0d;
    padding: 110rpx 32rpx 0;
    height: 220rpx;
    box-sizing: border-box;
}
.top .box1 .text1 {
    font-size: 40rpx;
}
.top .box1 .text2 {
    font-size: 28rpx;
    margin-top: 24rpx;
}

.top .box2 {
    /* margin-top: 1px; */
    height: 60rpx;
    background: #f9ce0d;
    border-bottom-left-radius: 40rpx;
    border-bottom-right-radius: 40rpx;
}

.activity {
    background: #fff;
    font-size: 28rpx;
    text-align: center;
    padding: 40rpx 60rpx 64rpx;
    
}
.activity-note {
    font-size: 32rpx;
}
.get-member-btn {
    width: 512rpx;
    background: #3D96D3;
    margin: 26rpx auto;
    height: 62rpx;
    line-height: 62rpx;
    color: #fff;
    border-radius: 32rpx;
}


.user-wrap {
    position: absolute;
    width: 684rpx;
    left: 33rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 5px;
    transform: translate(0, -50%);
    padding: 32rpx 40rpx;
    box-sizing: border-box;
    box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
}
.userInfo {
    display: flex;
    align-items: center;
}
.userInfo .avatar {
    width: 120rpx;
    height: 120rpx;
    display: block;
    margin-right: 28rpx;
    overflow: hidden;
    border-radius: 50%;
    background-size: cover;
    background-color: white;
}
.userInfo .nickName {
    flex: 1;
    color: #3D96D3;
}

.userInfo .member {
    text-align: center;
    font-size: 24rpx;
    border: 1px solid #aaa;
    background: #eaeaea;
    color: #aaa;
    border-radius: 10rpx;
    line-height: 1.6;
    padding: 0 8rpx;
}

.join-member {
    color: #D82C1E;
    font-size: 28rpx;
    text-decoration: underline;
}
.progress-wrap {
    margin-top: 32rpx;
}
.progress-cell {
    margin-top: 18rpx;
}
.progress-note {
    font-size: 24rpx;
    color: #3E3F41;
    justify-content: space-around
}
.progress-ft {
    font-size: 24rpx;
    color: #000;
    margin-left: 20rpx;
}





.operators {
    width: 683rpx;
    margin: 0 auto;
    margin-top: 40rpx;
    background: #fff;
    padding-left: 28rpx;
    border-radius: 10rpx;
    /* border-top: 1rpx solid rgb(217, 217, 217); */
    /* border-bottom: 1rpx solid rgb(217, 217, 217); */
    /* box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16); */
}
.operators .operator {
    position: relative;
    line-height: 92rpx !important;
    height: 92rpx !important;
    color: #4a4a4a;
    font-size: 34rpx;
    background: #fff;
    border-bottom: 1rpx solid rgb(217, 217, 217);
}
.operators .operator:last-child {
    border-bottom: none;
}

.contact-button {
    text-align: left;
    border-top: none;
    border-radius: none;
    background: transparent;
    padding: 0;
    font-size: 34rpx;
    font-weight: normal;
    color: #4a4a4a;
    margin: 0 !important;
    line-height: 92rpx !important;
}
.contact-button:before, 
.contact-button:after {
    display: none; }
.arrow-right {
    position: absolute;
    right: 30rpx;
    top: 50%;
    width: 10px;
    height: 10px;
    border-top: solid 1px #c9c9cf;
    border-right: solid 1px #c9c9cf;
    transform: translateY(-50%) rotate(45deg); 
}