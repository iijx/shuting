/* pages/my/my.wxss */

.container {
    min-height: 100vh;
    padding-bottom: 64rpx;
}
.top {
    height: 50%;
    width: 100%;
    color: #3e3f41;
    font-weight: bold;
}

.top .box1 {
    background: #f9ce0d;
    padding: 110rpx 32rpx 0;
    height: 220rpx;
    box-sizing: border-box;
}
.top .box1 .text1 {
    font-size: 40rpx;
}
.top .box1 .text2 {
    font-size: 28rpx;
    margin-top: 24rpx;
}

.top .box2 {
    /* margin-top: 1px; */
    height: 60rpx;
    background: #f9ce0d;
    border-bottom-left-radius: 40rpx;
    border-bottom-right-radius: 40rpx;
}

.activity {
    background: #fff;
    font-size: 28rpx;
    text-align: center;
    padding: 40rpx 60rpx 64rpx;
    
}
.activity-note {
    font-size: 32rpx;
}
.get-member-btn {
    width: 512rpx;
    background: #3D96D3;
    margin: 26rpx auto;
    height: 62rpx;
    line-height: 62rpx;
    color: #fff;
    border-radius: 32rpx;
}


.user-wrap {
    position: absolute;
    width: 684rpx;
    left: 33rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 5px;
    transform: translate(0, -50%);
    padding: 32rpx 40rpx;
    box-sizing: border-box;
    /* box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16); */
}
.userInfo {
    display: flex;
    align-items: center;
}
.getUserInfoBtn {
    background: none !important;
    border: none !important;
    font-size: 30rpx !important;
    display: inline !important;
    padding: 0 !important;
    margin: 0 !important;
    color: #000;
    font-weight: bold;
}
.getUserInfoBtn:after {
    display: none;
}
.userInfo .avatar {
    width: 120rpx;
    
    height: 120rpx;
    display: block;
    margin-right: 28rpx;
    overflow: hidden;
    border-radius: 50%;
    background-size: cover;
    background-color: white;
}
.userInfo .nickName {
    flex: 1;
    color: #3D96D3;
}

.member-btn {
    font-size: 24rpx;
    background: #FD4D4F;
    color: #fff;
    border-radius: 10rpx;
    line-height: 76rpx;
    box-shadow: 0px 0px 6px rgba(255, 0, 0, 0.4);
    text-align: center;
}
.member-pro {
    text-align: center;
    font-size: 24rpx;
    background: #FD4D4F;
    color: #fff;
    border-radius: 10rpx;
    line-height: 2.3;
    padding: 0 18rpx;
}
.join-member {
    color: #D82C1E;
    font-size: 28rpx;
    text-decoration: underline;
}
.progress-wrap {
    margin-top: 32rpx;
}
.progress-cell {
    margin-top: 18rpx;
}
.progress-note {
    font-size: 24rpx;
    color: #3E3F41;
    justify-content: space-around
}
.progress-hd {
    width: 30rpx;
    height: 30rpx;
    color: #fff;
    background: #3D96D3;
    border-radius: 50%;
    text-align: center;
    font-size: 26rpx;
    margin-right: 16rpx;
}
.progress-ft {
    font-size: 24rpx;
    color: #000;
    margin-left: 20rpx;
}


.freeMember {
    position: fixed;
    right: 0;
    bottom: 60rpx;
    width: 189rpx;
    padding: 0 !important;
    height: 54rpx;
    box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
}
.freeMember .img {
    display: block;
    width: 100%;
    height: 100%;
}

.operators {
    width: 683rpx;
    margin: 0 auto;
    margin-top: 40rpx;
    background: #fff;
    /* padding-left: 28rpx; */
    border-radius: 10rpx;
    overflow: hidden;
}

.contact-btn {
    text-align: left; padding: 0; border: 0 !important;
}
.contact-btn:after {
    display: none !important;
}