<!--pages/my/my.wxml-->
<view class="container">
    <view class="top-wrap">
        <image wx:if="{{ user.avatar }}" class="avatar" mode="widthFix" src="{{ user.avatar }}"></image>
        <image wx:elif="{{ user.isPro }}" class="avatar" mode="widthFix" src="/assets/imgs/user-unlogin.png"></image>
        <open-data wx:else class="avatar" type="userAvatarUrl"></open-data>
    
        <view wx:if="{{ user.nickName }}" class="nickName">{{ user.nickName }}</view>
        <button wx:elif="{{ user.isPro }}" class="getUserInfoBtn" open-type="getUserInfo" bindgetuserinfo="onGetUserInfo">点此微信登录</button>
        <open-data wx:else class="nickName" type="userNickName"></open-data>
        <view wx:if="{{ user.isPro }}" class="ft_14 pro-note">Pro会员 {{ user.memberType === 3 ? '永久版' : '' + proEndDateStr + '到期' }}</view>
    </view>

    <view class="main-wrap">
        <!-- 没有付过费 -->
        <view  wx:if="{{ !user.isPro }}" class="text-center">
            <view wx:if="{{ env.platform === 'android' || config.isAppInCheck }}" class="member-btn" bindtap="memberBtn">查看会员计划</view>
            <button wx:else class="member-btn" open-type="contact" session-from="member">回复 1 查看会员计划</button>
        </view>
    
        <view class="row-operaters">
            <view class="row-item row-item1" hover-class="hover" hover-stay-time="100" bindtap="link" data-path="/subpack/version/version">
                <van-icon name="down" color="#e0475a" size="26px"/>
                <view class="row-item-text">版本预告</view>
            </view>
            <view class="row-item" hover-class="hover" hover-stay-time="100" bindtap="link" data-path="/subpack/activity/activity">
                <van-icon name="point-gift-o" color="#e0475a" size="26px"/>
                <view class="row-item-text">免费vip</view>
            </view>
            <view class="row-item row-item3" hover-class="hover" hover-stay-time="100" bindtap="link" data-path="/subpack/exchange/exchange">
                <van-icon name="gem-o" color="#e0475a" size="26px"/>
                <view class="row-item-text">会员兑换码</view>
            </view>
        </view>

        <view wx:if="{{ user.openid === 'oH3iI5LMTT3KdVa6KQV4QHa8ijhM' }}" class="operators">
            <view hover-class="hover" hover-stay-time="100">
                <cell custom-class="operator-cell"  bind:tap="toChecking">
                    <view slot="hd" class="flex-center">
                        <van-icon name="bulb-o" color="#e0475a" size="26px"/>
                    </view>
                    <view slot="bd" class="operator-cell-body">返现审核</view>
                </cell>
            </view>
        </view>
    
        <view class="operators">
            <view  wx:if="{{ user.memberType + '' === '20' }}" hover-class="hover" hover-stay-time="100">
                <cell custom-class="operator-cell with-border" bind:tap="toMyDuju">
                    <view slot="hd" class="flex-center">
                        <van-icon name="bulb-o" color="#e0475a" size="26px"/>
                    </view>
                    <view slot="bd" class="operator-cell-body">我的笃局会员</view>
                    <view slot="ft">
                        <image src="/assets/imgs/arrow-right.png" class="icon-share-arrow" mode="widthFix"></image>
                    </view>
                </cell>
            </view>
            <view hover-class="hover" hover-stay-time="100">
                <button class="contact-btn" open-type="contact" style="">
                    <cell custom-class="operator-cell with-border">
                        <view slot="hd" class="flex-center">
                            <van-icon name="smile-o" color="#e0475a" size="26px"/>
                        </view>
                        <view slot="bd" class="operator-cell-body">
                            人工客服/建议/留言
                        </view>
                        <view slot="ft">
                            <image src="/assets/imgs/arrow-right.png" class="icon-share-arrow" mode="widthFix"></image>
                        </view>
                    </cell>
                </button>
            </view>
            <view hover-class="hover" hover-stay-time="100">
                <cell custom-class="operator-cell"  bind:tap="copyOpenid">
                    <view slot="hd" class="flex-center">
                        <van-icon name="idcard" color="#e0475a" size="26px"/>
                    </view>
                    <view slot="bd" class="operator-cell-body">复制 ID 号</view>
                </cell>
            </view>
        </view>
        
        
    </view>

    <van-dialog id="van-dialog"></van-dialog>
    
    <!-- 在页面内添加对应的节点 -->
    <van-notify id="van-notify" />

</view>
