/* pages/summary/summary.wxss */

.container {
    background: #F2effb;
    height: 100vh;
    position: relative;
    display: flex;
    align-items: center;
}
.bg {
    width: 100%;
    height: 100%;
    display: block;
}
.main {
    text-align: center;
    flex: 1;
}
.congratulate {
    width: 170rpx;
    height: 170rpx;
    border-radius: 50%;
}
.unit {
    color: #B1B2BC;
}

.btn-wrap {
    padding: 64rpx 0;
    display: flex;
}
.btn-wrap .btn {
    flex: 1;
}

.look-all {
    text-align: center;
    text-decoration: underline;
    color: #3D96D3;
    color: #a1aaff;
    margin-bottom: 20rpx;
}
.continue-btn {
    background: transparent !important;
    color: #4E545C !important;
    font-weight: bold !important;
    border: 2px solid #bbadff !important;
    font-size: 26rpx !important;
}