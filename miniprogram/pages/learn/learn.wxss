/**index.wxss**/
.container {
    box-sizing: border-box;
    height: 100vh;
    /* background-image: linear-gradient(-20deg, #e6f7ff 25%, #FEFFFE); */
    /* background-color: #fff; */
    background-color: #f4fafd;
    box-sizing: border-box;
    
    position: relative;
}
.header {
    position: relative;
    padding: 0 12rpx 40rpx;
    padding-top: 60rpx;
    align-items: center;
    display: flex;
}
.feedback {
    position: absolute;
    left: 20%;
    width: 10%;
    text-align: center;
    line-height: 1.6;
    font-size: 24rpx;
    text-decoration: underline;
    color: #56646A;
}
.icon-back-img {
    width: 40rpx;
    height: 40rpx;
}
.step-wrap {
    padding: 10rpx 40rpx;
    justify-content: center;
}
.step-item {
    flex: 1;
    margin: 0 4rpx;
    background-color: rgba(0, 0, 0, .1);
    height: 10rpx;
    position: relative;
    overflow: hidden;
}
.step-item .content {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 100%;
    transition: all .3s;
}
.content.right {
    background-color: #02AF42;
    right: 0;
}
.content.error {
    background-color: #E86452;
    right: 0;
}
.step-item.left-radius {
    border-top-left-radius: 10rpx;
    border-bottom-left-radius: 10rpx;
}
.step-item.right-radius {
    border-top-right-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}
.btm-spance {
    height: 580rpx;
}
.form {
    position: relative;
    justify-content: center;
}

.audio-wrap {
    text-align: center;
    padding: 20rpx 0;
}
.audio-wrap .audio {
    width: 104rpx;
    height: 91rpx;
}
.play-img2 {
    width: 42rpx;
    height: 37rpx;
}
.input-spans {
    display: flex;
    position: relative;
    justify-content: center;
    /* background-color: #F1F4F7; */
    /* background-color: #e6f7ff; */
    width: 100%;
    margin: 0 auto;
    padding: 30rpx 0;
    border-radius: 16rpx;
    flex-wrap: wrap;
}
.input-spans .span {
    width: 70rpx;
    height: 70rpx;
    border: 1rpx solid #CCCBCB;
    border-radius: 6rpx;
    margin: 8rpx;
    text-align: center;
    font-size: 38rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-weight: bolder;
    color: #4a4a4a;
    box-shadow: 0 6rpx 16rpx 0rpx rgba(0, 0, 0, .01),
                0 9rpx 28rpx 8rpx rgba(0, 0, 0, .005);
}
.input-spans .span.error { color: #FF406B; color: #E86452; color: #f5222d; }
.input-spans .span.correct { color: #02AF42; color: #5AD8A6; color: #52c41a}

.input {
    position: absolute;
    opacity: 0;
    bottom: 0;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
}
.answer {
    text-align: center;
    opacity: 0;
    color: #6DC8EC;
    color: #003a8c;
    font-size: 28rpx;
}
.answer.show {
    opacity: 1;
}

.prompt {
    text-align: right;
    padding: 0 20rpx 20rpx 0;
}
.prompt .show-answer {
    width: 70rpx;
    height: 70rpx;
    color: #3D96D3;
    color: rgb(153, 188, 212);
    display: inline-block;
}
.keyboard-wrap {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
}
.keyboard {
    overflow:hidden;
    padding: 4rpx;
    background: #FEFFFE;
    background: #D3EEF9;
    background: #eef5f0;
    background: #e6fffb;
    background: #e6f7ff;
    background: #D6DEFC;
    /* box-shadow:  0 -1px 1px #e6f7ff; */
    display: flex;
    height: 44vh;
    box-sizing: border-box;
}
.num-item {
    flex: 1;
    position:relative;
    box-sizing: border-box;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
    color: #1c1480;
    transition: all .1s;
}
.num-item.disabled {
    opacity: .5;
}
.ft13 {
    font-size: 26rpx;
}
.no-bg {
    background: none;
    box-shadow: none;
}

.num-item-hover {
    background: #b5c3d1;
    background: #bae7ff;
    background: #a1aaff;
    /* background: #7881ff; */
    transform: scale(1.1);
    font-weight: bold;
    font-size: 40rpx;
}

.icon-del {
    width: 70rpx;
    height: 70rpx;
}



@keyframes zoomIn {
    from {
      opacity: 0;
      transform: scale3d(.3, .3, .3);
    }
  
    30% {
      opacity: 1;
      transform: scale3d(1, 1, 1);
    }
    90% {
      opacity: 1;
      transform: scale3d(1, 1, 1);
    }

    100% {
        opacity: 0;
        transform: scale3d(0, 0, 0);
    }
}
  
.zoomIn {
    animation-duration: 1.2s;
    animation-fill-mode: both;
    animation-name: zoomIn;
}





