.avatar {
    width: 86rpx;
    height: 86rpx;
    display: block;
    overflow: hidden;
    border-radius: 50%;
    margin: 0 auto;
    background-size: cover;
    background-color: white;
    box-shadow: 0 12rpx 32rpx -16rpx rgba(0, 0, 0, .08),
    0 18rpx 54rpx 0rpx rgba(0, 0, 0, .05),
    0 24rpx 96rpx 32rpx rgba(0, 0, 0, .03);
}
.my-text {
    font-style: italic;
    text-decoration: underline;
    color: #efefef;
    margin-top: 10rpx;
}
