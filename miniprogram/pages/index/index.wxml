<view class="container">
    <view class="top">
        <view class="box1">
            <view class="text1">专项练习·提升数字英语听力</view>
            <view class="text2">Let’s get started</view>
        </view>
        <view class="box2"></view>
    </view>
    
    <view class="mid">
        <view class="title">{{ curLevel.title || '暂无' }}</view>
        <view class="body">
            <view class="levellist-wrap">
                <view wx:for="{{ curSubLevelList }}" wx:key="index" wx:item="item" class="level-item-wrap">
                    <!-- <view>{{ item.title }}</view> -->
                    <view style="opacity: {{ item.levelId === curSubLevel.levelId ? 1 : 0.5}}">
                        <van-circle wux-class="level-item" value="100" color="#3D96D3">{{ item.title }}</van-circle>
                    </view>
                </view>
                <view wx:if="{{ curSubLevelList.length <= 0 }}">
                    <view></view>
                </view>
            </view>
