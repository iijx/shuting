            </cell>
            <cell>
                <view slot="hd">时间</view>
                <switch slot="ft" value="{{timeSwitch.value}}" type="time" bindchange="switchChange"></switch>
            </cell>
            
            <cell>
                <view slot="hd">电话</view>
                <switch slot="ft" value="{{phoneSwitch.value}}" type="phone" bindchange="switchChange"></switch>
            </cell> -->
            <view class="learn-btn" bindtap="toLearn">{{ curSubLevelList.length <= 0 ? '选择练习级别' : '开始练习' }} </view>
        </view>
    </view>
</view>
