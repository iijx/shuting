/* pages/level/level.wxss */
.container {
    padding: 36rpx;
    padding-bottom: 140rpx;
    /* background-image: linear-gradient(0dergb(121, 157, 177)55), rgb(79, 172, 254) 40%); */
    background-image: linear-gradient(180deg, #f9ce0d, #f8ecba);
}
.curBook-wrap {
    border-radius: 20rpx;
    background: #fff;
    overflow: hidden;
    padding-bottom: 8rpx;
}
.curBook-wrap > .title,
.levels > .title {
    font-size: 26rpx;
    display: flex;
    padding-left: 30rpx;
    line-height: 70rpx;
    align-items: center;
    background: #fddcdc;
}
.curBookLocation {
    text-align: center;
    color: #000;
    font-weight: bold;
    font-size: 36rpx;
    margin: 30rpx 0 26rpx;
}
.levels {
    background-color: #fff;
    margin-top: 30rpx;
    margin: 32rpx 0 40rpx;
    padding-bottom: 50rpx;
    border-radius: 20rpx;
    overflow: hidden;
}
/* 
.level-list {
    padding: 32rpx;
} */
.level-title {
    color: #000;
    text-align: left;
    font-size: 32rpx;
    font-weight: 700;
    /* margin-bottom: 32rpx; */
    /* padding: 28rpx 32rpx; */
}
.icon-level {
    width: 36rpx;
    height: 36rpx;
    margin-right: 8rpx;
}
.unit-wrap {
    padding: 0 32rpx;
}
.unit {
    padding: 20rpx 0;
    border-bottom: 1rpx solid #e2e2e2;
    display: flex;
    align-items: center;
    flex-shrink: 0;
    position: relative;
    
}
.unit .dot{
    width: 10px;
    height: 10px;
    display: block;
    border-radius: 50%;
    margin-right: 8px;
    flex-shrink: 0;
    background: rgb(117, 210, 55);
}
.unit .lock {
    width: 26rpx;
    height: 36rpx;
    display: block;
    opacity: .6;
}
.unit-title {
    font-weight: bolder;
    color: #333;
    font-size: 34rpx;
    line-height: 1.6;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.unit-status {
    font-size: 30rpx;
    color: #4a4a4a;
    line-height: 1;
}
.unit-border {
    margin: 0 32rpx;
    height: 1rpx;
    border-bottom: 1rpx solid #e2e2e2;
}
.unit-select-btn {
    flex-shrink: 0;
    color: #4facfe;
    font-size: 30rpx;
    font-weight: bolder;
}
