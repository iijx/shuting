/* pages/level/level.wxss */

.level-list {
    padding: 32rpx;
}

.level {
    margin-bottom: 68rpx;
    color: #fff;
    height: 228rpx;
    border-radius: 5px;
    box-shadow:0px 6px 10px rgba(0,0,0,0.16);
    padding: 24rpx;
    position: relative;
}
.isPro {
    position: absolute;
    color: #FF6947;
    right: 20rpx;
    top: 20rpx;
    font-weight: bold;
    font-size: 30rpx;
}

.detail-note {
    position: absolute;
    bottom: 20rpx;
    font-size: 28rpx;
    
}
.detail-btn {
    position: absolute;
    top: 30rpx;
    right: 50rpx;
    color: #fff;
    text-decoration: underline;
    font-size: 28rpx;
}

.select-btn {
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    height: 64rpx;
    width: 160rpx;
    /* display: flex;
    align-items: center;
    justify-content: center; */
    border-radius: 32rpx;
    /* background: #fff; */
    color: #3D96D3;
    font-size: 28rpx;
    

}

.level-1 {
    background: #EEC432;
}
.level-2 {
    background: #AECA47;
}
.level-3 {
    background: #4195D6;
}


.prompt {
    background:rgba(254,248,243,1) ;
    /* background:red !important; */
    box-shadow:0px 2px 4px 0px rgba(199,199,204,0.5);
    border-radius: 14rpx;
    /* padding-left: 32rpx; */
    color: #FF6947;
    height: 80rpx;
    margin-bottom: 24rpx;
}
.prompt .note {
    color: #FF6947;
    font-size: 30rpx;
    font-weight: bold;
    /* line-height: 88rpx; */
}
.arrow {
    padding-right: 24rpx;
    font-size: 32rpx;
    line-height: 32rpx;
    font-weight: bold;
}