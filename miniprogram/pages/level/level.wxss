/* pages/level/level.wxss */

.level-list {
    padding: 32rpx;
}

.level {
    margin-bottom: 68rpx;
    color: #fff;
    height: 228rpx;
    border-radius: 5px;
    box-shadow:0px 6px 10px rgba(0,0,0,0.16);
    padding: 24rpx;
    position: relative;
}
.isPro {
    position: absolute;
    color: #D82C1E;
    right: 20rpx;
    top: 20rpx;
}

.detail-note {
    position: absolute;
    bottom: 20rpx;
    font-size: 28rpx;
}

.select-btn {
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    height: 64rpx;
    width: 160rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 32rpx;
    background: #fff;
    color: #3D96D3;
    font-size: 28rpx;
    

}

.level-1 {
    background: #EEC432;
}
.level-2 {
    background: #AECA47;
}
.level-3 {
    background: #4195D6;
}