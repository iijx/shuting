/* pages/summary/summary.wxss */

.container {
    /* padding: 100rpx 0 0 0; */
    height: 100vh;
    position: relative;
    /* display: flex; */
    /* align-items: center; */
    /* background: url('http://cdnword.iijx.site/assets/imgs/shuting/firework.png'); */
    background-size: auto 100%;
    /* filter: blur(1px); */

}
.bg {
    width: 100%;
    height: 100%;
}
.main {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 686rpx;
    background: #fff;
    border-radius: 10rpx;
    box-sizing: border-box;
    padding: 0 32rpx 32rpx;
    /* opacity: .9; */
}
.award {
    width: 200rpx;
    /* height: 100rpx; */
}
.avatar {
    position: absolute;
    top: 0;
    right: 30rpx;
    transform: translate(0, -50%);
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    display: block;
    overflow: hidden;
}
.nickName {
    position: absolute;
    text-align: center;
    font-size: 34rpx;
    width: 180rpx;
    top: 70rpx;
    right: 0;
    color: #272162;
}
.note {
    position: absolute;
    font-size: 34rpx;
    line-height: 3;
    right: 32rpx;
    top: 110rpx;
    color: #FF406B;
}
.content {
    padding: 64rpx 0;
    text-align: center;
    line-height: 2.3;
}
.content .title {
    font-size: 56rpx;
    font-weight: bold;
    color: #272162;
}
.content .title-1 {
    font-size: 48rpx;
    font-weight: bold;
    color: #FF406B;
}

.btn-wrap {
    padding: 64rpx 0;
    display: flex;
}
.btn-wrap .btn {
    flex: 1;
}


.look-all {
    text-align: center;
    text-decoration: underline;
    color: #3D96D3;
    margin-bottom: 20rpx;
}