<!--pages/activity/activity.wxml-->
<view class="container">
    <view class="activity-item bg_fff mb_10 pb_20">
        <image class="img" src="http://cdn.iijx.site/img/ebe8n.png" mode="widthFix"/>
        <view class="mt_20 w90 blockC">
            <view class="title text-center">邀请{{ config.freeMemberNeedCount }}位新用户进入即可获赠7天会员!</view>
            <view class="flex dot-wrap">
                <view wx:for="{{ config.freeMemberNeedCount }}" wx:key="index" class="dot {{ index < inviteNum ? 'active' : '' }}"></view>
            </view>
            <view class="progress-note">{{ progressNote }}</view>

            <view class="mt_20 w90 blockC">
                <van-button wx:if="{{ isUsedFreeMember }}" round size="normal" disabled color="#00C171" block>已领取</van-button>
                <van-button wx:elif="{{ inviteNum < config.freeMemberNeedCount }}" round size="normal" open-type="share" color="#00C171" block>邀请好友</van-button>
                <van-button wx:else bind:click="getFreeMember" round size="normal" color="#00C171" block>立即领奖</van-button>
            </view>
        </view>
    </view>
    <van-dialog id="van-dialog" />
</view>
