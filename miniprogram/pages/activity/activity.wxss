/* pages/activity/activity.wxss */

.container {
    padding: 32rpx;
    min-height: 10vh;
}

.activity-item {
    width: 100%;
    background: #fff;
    box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
    border-radius: 10rpx;
    overflow: hidden;
}

.activity-item .title {
    color: #000;
    /* font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif; */
    font-family: 'Times New Roman', Times, serif;
    font-size: 34rpx;
    letter-spacing: 1rpx;
}


.activity-item .banner {
    width: 100%;
    display: block;
}
.period {
    color: #4a4a4a;
    font-size: 26rpx;
    line-height: 1.7;
}