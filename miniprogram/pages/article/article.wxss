    background-color: #fff;
    min-height: 100vh;
    line-height: 60rpx;
}
.content {
    padding: 40rpx 24rpx 100rpx 30rpx;
    color: #353535;
    font-size: 32rpx;
    line-height: 1.6;
    box-sizing: border-box;
}
.h2 {
    font-size: 36rpx;
    color: #000;
    font-weight: bold;
    /* margin: 40rpx 0 18rpx; */
    margin-bottom: 36rpx;
}
.p {
    /* margin-top: 22rpx; */
    margin-bottom: 54rpx;
}
.strong {
    font-weight: bold;
    color: #000;
}
.code {
    /* background-color: #f7f9fa; */
    padding: 0 6rpx;
    color: #d93044;
    line-height: 1.6;
    font-family: monospace;
    font-size: 30rpx;
}
.li {
    margin-left: 16rpx;
}
.strong {
    font-weight: bold;
}
.ps {
    padding: 10rpx 0 10rpx 20rpx;
