/* pages/activity/activity.wxss */

.container {
    padding: 32rpx;
    min-height: 10vh;
}

.activity-item {
    width: 100%;
    box-sizing: border-box;
    background: #fff;
    /* box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16); */
    border-radius: 10rpx;
    overflow: hidden;
}
.img {
    width: 100%;
    display: block;
}

.activity-item .title {
    color: #000;
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
}
.progress-note {
    font-size: 26rpx;
    color: #3E3F41;
    text-align: center;
    margin-top: 20rpx;
}
.dot-wrap {
    width: 50%;
    margin: 40rpx auto;
    justify-content: space-between;
}
.dot {
    width: 40rpx;
    height: 40rpx;
    background-color: #e5e5e5;
    border-radius: 50%;
}
.dot.active {
    background-color: #00C171;
}

.activity-item .banner {
    width: 100%;
    display: block;
}
.period {
    color: #4a4a4a;
    font-size: 26rpx;
    line-height: 1.7;
}


.content {
    color: #4a4a4a;
    font-size: 15px;
    line-height: 2;
}